<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorLoginBackground"
    tools:context="com.codelycan.foodiedoodie.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:inputType="textEmailAddress"
            android:padding="@dimen/view_padding"
            android:layout_margin="@dimen/view_margin"
            android:background="@color/colorLoginView"
            android:textColor="@color/colorLoginText"
            android:textColorHint="@color/colorLoginHint"
            android:singleLine="true"
            android:layout_height="wrap_content"
            android:typeface="monospace"
            android:hint="Email Address"
            android:gravity="center_vertical|center_horizontal" />
        <EditText
            android:layout_width="match_parent"
            android:padding="@dimen/view_padding"
            android:layout_margin="@dimen/view_margin"
            android:background="@color/colorLoginView"
            android:textColor="@color/colorLoginText"
            android:textColorHint="@color/colorLoginHint"
            android:id="@+id/password"
            android:singleLine="true"
            android:layout_height="wrap_content"
            android:typeface="monospace"
            android:hint="Password"
            android:gravity="center_vertical|center_horizontal"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login"
            />
        <View
            android:layout_margin="@dimen/view_margin"
            android:layout_width="match_parent"
            android:background="@color/colorDivider"
            android:layout_height="2dp" />
        <!--<com.facebook.login.widget.LoginButton-->
            <!--android:id="@+id/fb_login_button"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="center_horizontal"-->
            <!--android:layout_marginTop="30dp"-->
            <!--android:layout_marginBottom="30dp" />-->
        <Button
            android:id="@+id/fb_login_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/view_margin"
            android:padding="@dimen/view_padding"
            android:text="Login With Facebook"
            android:background="@color/colorPrimary"
            android:textColor="@color/colorRegisterText"
            />
        <View
            android:layout_margin="@dimen/view_margin"
            android:layout_width="match_parent"
            android:background="@color/colorDivider"
            android:layout_height="2dp" />

    </LinearLayout>

    <TextView
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:id="@+id/linkToRegisterScreen"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:padding="@dimen/view_padding"
        android:layout_margin="@dimen/view_margin"
        android:text="OR REGISTER YOURSELF"
        android:textColor="@color/colorWhite"
        android:layout_height="wrap_content" />

</RelativeLayout>
